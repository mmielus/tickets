<!DOCTYPE html>
<html>
<head>
  <title>Organizacja Event√≥w</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>app
<% end %>

<nav class="navbar navbar-light bg-light">
  <% if user_signed_in? %>
  <a class="navbar-brand" href="/">Logged in as <strong><%= current_user.email %></strong>.</a>
  <% end %>
  <form class="form-inline">
    <% if user_signed_in? %>

      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-outline-primary' %>
      <div style="padding-left: 10px;">
      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-outline-danger' %>
      </div>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Login", new_user_session_path, :class => 'navbar-link' %>
    <% end %>
  </form>
</nav>
<%= yield %>
</body>
</html>
